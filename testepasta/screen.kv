Gerenciar:
    JanelaPrincipal:
    Janela1:
    Janela2:
    Janela3:


<JanelaPrincipal>:
    name: 'main'
    MDScreen:
        md_bg_color: app.theme_cls.primary_color
        radius: [0, 0, 75, 75]
        MDLabel:
            id: text1
            text: "ARRecife"
            pos_hint: {"center_x":0.65 , "center_y": 0.7}
            font_size: "65sp"
            opacity: 0
            color: (1,1,1,1)
            bold: False
            italic: True

        MDRectangleFlatButton:
            id:button1
            text: "  Iniciar  "
            text_color:"white"
            font_size: "42sp"
            pos_hint: {"center_x": 0.5, "center_y": 0.4}
            md_bg_color: app.theme_cls.primary_light
            opacity: 0.8
            line_color: "white"
            opacity: 0

        MDRectangleFlatButton:
            id:button2
            text: " Tutorial "
            text_color: "white"
            font_size: "42sp"
            pos_hint: {"center_x": 0.5, "center_y": 0.25}
            md_bg_color: app.theme_cls.primary_light
            opacity: 0.8
            line_color: "white"
            on_release: app.root.current = 'tutorial' 

        MDFloatLayout:
            id: back
            size_hint_y: .3
            pos_hint: {"center_y": -0.1}
            radius: [0, 0, 0, 0]
            canvas:
                Color:
                    rgb: (1,1, 1, 1)
                Ellipse:
                    size: self.size
                    pos:self.pos
<Janela1>:
    name:'tutorial'
    MDScreen:
        md_bg_color: app.theme_cls.primary_color
        radius: [0, 0, 75, 75]
        Image:
            source:'predio.png'
            pos_hint:{"center_x": .5, "center_y": .5}
        Image:
            source: 'passar11.png'
            size_hint: (0.3, 0.03)
            pos_hint: {"center_x": .5, "center_y": .15}
        MDLabel:
            id: texto1
            text: "1º passo!"
            pos_hint: {"center_x": 0.70 , "center_y": 0.87}
            font_size: "48sp"
            color: (1,1,1,1)
            bold: False
            italic: True
        MDLabel:
            id: texto2
            text: "Visite os prédios do Recife Antigo."
            pos_hint: {"center_x":0.58 , "center_y": 0.75}
            font_size: "20sp"
            opacity: 1
            color: (1,1,1,1)
            bold: False
            italic: True

        MDTextButton:
            id:button1
            text: "  Voltar  "
            color: "white"
            font_size: "20sp"
            size_hint: (0.3, 0.03)
            pos_hint: {"center_x": 0.23, "center_y": 0.25}
            opacity: 1
            on_release: app.root.current = 'main'

        MDTextButton:
            id:button2
            text: " Próximo "
            color: "white"
            font_size: "20sp"
            size_hint: (0.3, 0.03)
            pos_hint: {"center_x": 0.77, "center_y": 0.25}
            opacity: 1
            on_release: app.root.current = 'tutorial1'
        MDFloatLayout:
            id: back
            size_hint_y: .3
            pos_hint: {"center_y": -0.1}
            radius: [0, 0, 0, 0]
            canvas:
                Color:
                    rgb: (1,1, 1, 1)
                Ellipse:
                    size: self.size
                    pos:self.pos
